<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:Data.UI"
>
    <b:Interaction.Triggers>
        <ei:DataTrigger Binding="{Binding State}" Value="{x:Static local:States.Menu}">
            <b:ChangePropertyAction PropertyName="Visibility" Value="{x:Static Visibility.Visible}"/>
        </ei:DataTrigger>
        <ei:DataTrigger Binding="{Binding State}" Comparison="NotEqual" Value="{x:Static local:States.Menu}">
            <b:ChangePropertyAction PropertyName="Visibility" Value="{x:Static Visibility.Hidden}"/>
        </ei:DataTrigger>
    </b:Interaction.Triggers>
    
    <Viewbox>
        <StackPanel Margin="50">
            <Button Name="Start Game" Content="Start Game" Margin="0,30,0,0" Command="{Binding Start}"/>
            <Button Name="Exit" Content="Exit" Margin="0,30,0,0" Command="{Binding Exit}"/>
        </StackPanel>
    </Viewbox>
</UserControl>